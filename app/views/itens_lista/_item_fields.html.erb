<div class="item-row card p-3 mb-2 lista-item-card">
  <%= f.hidden_field :id %>
  <div class="row g-2 align-items-end">
    <div class="col-md-4">
      <%= f.label :nome_item, "Nome do Item", class: "form-label" %>
      <%= f.text_field :nome_item, class: "form-control", required: true %>
    </div>

    <div class="col-md-3">
      <%= f.label :quantidade, "Quantidade", class: "form-label" %>
      <%= f.number_field :quantidade, class: "form-control", min: 1, value: 1, required: true %>
    </div>

    <div class="col-md-4">
      <%= f.label :observacoes, "Observações", class: "form-label" %>
      <%= f.text_field :observacoes, class: "form-control" %>
    </div>

    <div class="col-md-1 text-end">
      <button type="button" class="btn btn-danger btn-sm" data-action="itens#removeItem">
        <i class="bi bi-trash"></i>
      </button>
    </div>
  </div>
</div>
